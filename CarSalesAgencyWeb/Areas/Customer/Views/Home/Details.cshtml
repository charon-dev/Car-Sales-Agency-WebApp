@model CarSalesAgency.Models.ShoppingCarts

<form method="post">
        <input hidden asp-for="CarId"/>
        <div class="card  container pt-4">
            <div class="card-header bg-primary text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-light-50">@Model.Car.Name</h1>
                    <p class="text-warning">by @Model.Car.Brand.Name</p>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Places number: @Model.Car.PlacesNumber</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Color: @Model.Car.Color</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Type: @Model.Car.Type</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Model: @Model.Car.Model</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Price: @Model.Car.Price.ToString("c")</h5>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10"><input asp-for="Count" class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col w-100">
                            <img style="height:212px;overflow:hidden" src="@Model.Car.ImgUrl" class="img-thumbnail" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>
